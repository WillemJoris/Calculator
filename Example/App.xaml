<Application x:Class="Example.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Example"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="numbersColor" Color="#454444"/>
        <SolidColorBrush x:Key="operatorsColor" Color="DarkGoldenrod"/>
        <SolidColorBrush x:Key="foregroundColor" Color="WhiteSmoke"/>
        <Style TargetType="Button" x:Key="buttonStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="Button" x:Key="additionalButtonStyle" BasedOn="{StaticResource buttonStyle}">
            
        </Style>
        <Style TargetType="Button" x:Key="numbersButtonStyle" BasedOn="{StaticResource buttonStyle}">
            <Setter Property="Foreground" Value="{StaticResource foregroundColor}"/>
            <Setter Property="Background" Value="{StaticResource numbersColor}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="Button" x:Key="operatorsButtonStyle" BasedOn="{StaticResource numbersButtonStyle}">
            <Setter Property="Background" Value="{StaticResource operatorsColor}"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Application.Resources>
</Application>
